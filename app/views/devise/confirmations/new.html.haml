%h2 Resend confirmation instructions
= form_for(resource,
  :as => resource_name,
  :url => confirmation_path(resource_name), 
  :html => {:method => :post, :class => "auth"}) do |f|
  = devise_error_messages!
  .fields
    = f.label :email
    = f.text_field :email
  .fields= f.submit "Resend confirmation instructions"
= render :partial => "devise/shared/links"
