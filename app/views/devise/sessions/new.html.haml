%h2 Sign in

= form_for(resource,
  :as => resource_name,
  :url => session_path(resource_name),
  :html => {:class => "auth"}) do |f|
  
  = devise_error_messages!
  .fields
    = f.label :email
    = f.text_field :email
  .fields
    = f.label :password
    = f.password_field :password
  - if devise_mapping.rememberable?
    .fields
      = f.check_box :remember_me
      = f.label :remember_me
  .fields= f.submit "Sign in"
= render :partial => "devise/shared/links"
